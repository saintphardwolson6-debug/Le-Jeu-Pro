<script>
const form = document.getElementById("hostForm");
form.addEventListener("submit", function(e){
  e.preventDefault();
  const hostName = form.hostName.value.trim() || "host";
  // G√©n√©rer lien unique UID
  const uid = hostName + Math.floor(Math.random()*10000);
  const link = window.location.origin + "/jouer.html?uid=" + uid;
  document.getElementById("hostLink").value = link;
  document.getElementById("generatedLink").style.display = "block";
  alert("Lien g√©n√©r√© ‚úÖ Partage-le avec tes amis !");
});

function copyLink() {
  const input = document.getElementById("hostLink");
  input.select();
  document.execCommand("copy");
  alert("Lien copi√© ‚úÖ Partage-le !");
}
