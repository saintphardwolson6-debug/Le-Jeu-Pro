// Share dynamique
window.addEventListener("load",()=>{
  const uidInput=document.getElementById("uidLink");
  if(uidInput){
    const link=uidInput.value;
    document.getElementById("shareWA").href="https://wa.me/?text=Viens%20jouer%20au%20Jeu%20Pro%20ðŸ‘‰%20"+encodeURIComponent(link);
    document.getElementById("shareFB").href="https://www.facebook.com/sharer/sharer.php?u="+encodeURIComponent(link);
    document.getElementById("shareTW").href="https://twitter.com/intent/tweet?url="+encodeURIComponent(link)+"&text=Viens%20jouer%20au%20Jeu%20Pro!";
  }
});